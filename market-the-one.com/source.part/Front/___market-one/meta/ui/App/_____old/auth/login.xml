<form  name="login" title="Login form" class_name="Ui_Form" type="form">
	
	<title>
		<en>Auth form</en>
		<ru>Форма авторизации</ru>
	</title>
			
	<fields>
		<field name="login" type="input" is_required = "1">
			<title>
				<en>Login</en>
				<ru>Логин</ru>
			</title>
			
			<length>1-40</length>
		</field>
			
		<field name="password" type="input" is_required = "1">
			
			<title>
				<en>Password</en>
				<ru>Пароль</ru>
			</title>
			<length>4-40</length>
		<view type="password">1</view>
							
		</field>
			
		
